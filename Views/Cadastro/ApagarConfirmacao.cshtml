@model CadastroUsuarios.Models.CadastroModel

@{
    ViewData["Title"] = "Confirmar remoção de usuário";
}

<div class="text-center">
    <h3>Você quer apagar este Contato? @Model.Nome</h3>
</div>

<div class="text-center">
    <a class="btn btn-primary btn-block" role="button" asp-controller="Cadastro" asp-action="ApagarConfirmacao">Confirmar exclusão</a>
    <a class="btn btn-danger btn-block" role="button" asp-controller="Cadastro" asp-action="Index">Desistir</a>
</div>