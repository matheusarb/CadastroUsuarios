                        <a role="button" class="btn btn-primary" asp-controller="Cadastro" asp-route-id="" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Cadastro" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Usuario2</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-controller="Cadastro" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Cadastro" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Usuario3</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-primary" asp-controller="Cadastro" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Cadastro" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    
</div>

